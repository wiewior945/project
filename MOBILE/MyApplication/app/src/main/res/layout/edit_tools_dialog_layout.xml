<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:id="@+id/boldButton"
        android:background="@drawable/rounded"
        android:src="@drawable/bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:id="@+id/italicButton"
        android:background="@drawable/rounded"
        android:src="@drawable/italic"
        android:layout_alignTop="@+id/boldButton"
        android:layout_toRightOf="@+id/boldButton"
        android:layout_toEndOf="@+id/boldButton"
        android:layout_marginLeft="5dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:background="@drawable/rounded"
        android:id="@+id/underlineButton"
        android:src="@drawable/underline"
        android:layout_alignTop="@+id/italicButton"
        android:layout_toRightOf="@+id/italicButton"
        android:layout_toEndOf="@+id/italicButton"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:id="@+id/editText"
        android:layout_below="@+id/boldButton"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@drawable/rounded"
        android:text="Dodaj"
        android:id="@+id/addEditedText"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anuluj"
        android:id="@+id/cancelEditToolsButton"
        android:textAllCaps="false"
        android:background="@drawable/rounded"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/addEditedText"
        android:layout_toLeftOf="@+id/addEditedText"
        android:layout_toStartOf="@+id/addEditedText" />
</RelativeLayout>